<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextFieldBoxes">

        <!--Texts-->
        <attr name="text" format="string" />
        <attr name="labelText" format="string" />
        <attr name="helperText" format="string" />
        <attr name="hint" format="string" />
        <attr name="prefix" format="string" />
        <attr name="suffix" format="string" />

        <!--Colors-->
        <attr name="helperTextColor" format="color" />
        <attr name="errorColor" format="color" />
        <attr name="primaryColor" format="color" />
        <attr name="prefixTextColor" format="color" />
        <attr name="suffixTextColor" format="color" />
        <attr name="panelBackgroundColor" format="color" />

        <!--Characters counter-->
        <attr name="maxCharacters" format="integer" />
        <attr name="minCharacters" format="integer" />

        <!--Others-->
        <attr name="enabled" format="boolean" />
        <attr name="singleLine" format="boolean" />
        <attr name="maxLines" format="integer" />
        <attr name="iconSignifier" format="reference" />
        <attr name="hasFocus" format="boolean" />

    </declare-styleable>
</resources>